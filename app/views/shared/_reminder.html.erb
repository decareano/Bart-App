<div class="modal fade " id="reminderModal" tabindex="-1" role="dialog" aria-labelledby="reminderModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title">Set a new reminder</h3>
      </div>
      <div class="modal-body reminder_modal">
		 <h4>Choose a date, time, stations and direction:</h4>
        <div class="form-horizontal">
			
          <form id="reminder_form" action="/reminders" method="post">
			  
			  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			  
			  <input type="date" name="reminder[date]">
			  
			  <!-- timepicker start -->
			  <div class="input-append bootstrap-timepicker">
	              <input name="reminder[runtime]" id="timepicker1" type="text" class="input-small">
	              <span class="add-on"><i class="icon-time"></i></span>
	          </div>
	          <script type="text/javascript">
	              $('#timepicker1').timepicker({minuteStep: 1});
	          </script>
			  <!-- time picker end -->
			  
			  <!-- station selector start -->
			  <% stations = Station.all %>
			  <select name="reminder[station_abbr]" id="station_name">
			  	<% stations.each do |station| %>
			  		<option value= <%= station.abbr %>> <%= station.name %> </option>
			  	<% end %>
			  </select>
			  <!-- station selector end -->
			  
			  <!-- direction selector start -->
			  <select name="reminder[direction]" id="reminder_direction">
			  		<option value="Northbound"> Northbound trains </option>
					<option value="Southbound"> Southbound trains </option>
			  </select>
			  <!-- direction selector end -->
			<br>
			
			 <button type="submit" class="reminder_submit btn btn-inverse">Create reminder</button>
             <button type="button" class="btn btn-inverse" data-dismiss="modal">Cancel</button> 	 
          </form>
		  
		</div>
		<%= render "shared/reminder_list"%>
      </div>
    </div>
  </div>
</div>